  title Welcome Page
  style.
    body {
    font-family: Arial, sans-serif;
    text-align: center;
    padding-top: 100px;
    }
    .welcome-container {
    max-width: 600px;
    margin: 0 auto;
    border: 2px solid #333;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    h1 {
    color: #333;
    }
    p {
    color: #666;
    }
    .go-to-link {
    display: inline-block;
    margin-top: 20px;
    padding: 10px 20px;
    color: #fff;
    background-color: #007BFF;
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.3s;
    }
    .go-to-link:hover {
    background-color: #0056b3;
    }
